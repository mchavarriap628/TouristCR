<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TouristCR.MainPage">

    <Grid>

        <Image Source="loginB.jpg" Aspect="AspectFill"/>
        <BoxView Color="black" Opacity="0.2"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackLayout>
                <Label Text="TouristCR" TextColor="white" FontSize="50" Padding="24,24,24,10" Margin="0,60,0,0"  HorizontalOptions="Center" FontFamily="Roboto Thin" />
                <Label Text="Sign in to continue" FontSize="15" HorizontalOptions="Center"/>

                <Entry Placeholder="Email" PlaceholderColor="Gray" x:Name="EntEmail" BackgroundColor="White" Margin="20,90,20,0" TextColor="Black"/>
                <Entry Placeholder="Password" PlaceholderColor="Gray" x:Name="EntPass" BackgroundColor="White" Margin="20,5,20,0" TextColor="Black" IsPassword="True"/>

                <Button Text="Login" x:Name="btnLogin" BackgroundColor="#216f7d" Margin="20,20,20,10" TextColor="white" BorderRadius="10"/>
                <Label Text="Forgot Password?" TextColor="White" HorizontalOptions="Center" Margin="0,30,0,0" x:Name="txtForgotPassword"/>
                <Button Text="Click here if you don't have an account" TextColor="White" BackgroundColor="Transparent" FontSize="Small" HorizontalOptions="Center" Margin="0,30,0,0" x:Name="btnCreateAccount"/>

                <Button IsVisible="true" Text="Pruebas" x:Name="btnPruebas" BackgroundColor="red" Margin="20,20,20,10" TextColor="white" BorderRadius="10"/>
                
            </StackLayout>

        </Grid>

    </Grid>

</ContentPage>
